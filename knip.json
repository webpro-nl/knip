{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "include": ["classMembers"],
  "ignore": [".github/workflows/ci-worktree.yml"],
  "workspaces": {
    ".": {
      "project": ["!templates/**"]
    },
    "packages/knip": {
      "project": [
        "src/**/*.ts!",
        "test/**/*.ts",
        "!src/util/empty.ts",
        "!**/_template/**"
      ]
    },
    "packages/docs": {
      "entry": ["{remark,scripts}/*.ts"]
    }
  }
}
