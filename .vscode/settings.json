{
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "editor.codeActionsOnSave": {
    "quickfix.biome": "explicit",
    "source.organizeImports.biome": "explicit"
  },
  "cSpell.enabled": true,
  "cSpell.words": [
    "astro",
    "codebase",
    "codegen",
    "codeowners",
    "commitlint",
    "devkit",
    "execa",
    "jiti",
    "knip",
    "lefthook",
    "preprocess",
    "preprocessor",
    "stylelint",
    "timerify",
    "tsup",
    "unimported",
    "webp"
  ],
  "editor.formatOnSave": true
}
