  "peerDependencies": {
    "knip": "^5.62.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "^1.1.0",
    "@types/node": "^18.0.0",
    "typescript": "^5.5.2"
  },
  "engines": {
    "node": ">=18.18.0"
  },
  "engineStrict": true,
