{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "importHelpers": true,
    "paths": {
      "@": ["../trailing"],
      "~": ["../comma"],
    },
    "plugins": [
      {
        "name": "typescript-eslint-language-service"
      },
      {
        "name": "ts-graphql-plugin",
        "schema": "path-or-url-to-your-schema.graphql",
        "tag": "gql"
      },
    ]
  },
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
  ]
}
