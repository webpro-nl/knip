{
  "$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
  "extends": "//",
  "files": {
    "includes": [
      "!vendor/bash-parser/index.js",
      "!fixtures/plugins/biome-workspace/packages/stub"
    ]
  },
  "linter": {
    "rules": {
      "suspicious": {
        "useIterableCallbackReturn": "off"
      },
      "style": {
        "noRestrictedImports": {
          "level": "error",
          "options": {
            "paths": {
              "node:path": "Please use src/util/path.js instead.",
              "path": "Please use src/util/path.js instead."
            }
          }
        }
      }
    }
  },
  "formatter": {
    "includes": ["**", "!**/ignore-exports-used-in-file-alias-exclude/more.ts"]
  },
  "overrides": [
    {
      "includes": [
        "src/reporters/**",
        "scripts/**",
        "fixtures/cli-preprocessor/**",
        "fixtures/cli-reporter/**"
      ],
      "linter": {
        "rules": {
          "suspicious": {
            "noConsole": "off"
          }
        }
      }
    },
    {
      "includes": ["test/util/get-inputs-from-scripts.test.ts"],
      "formatter": {
        "lineWidth": 200
      }
    },
    {
      "includes": ["fixtures/**"],
      "assist": { "actions": { "source": { "organizeImports": "off" } } },
      "linter": {
        "rules": {
          "complexity": {
            "useLiteralKeys": "off",
            "noImportantStyles": "off"
          },
          "correctness": {
            "noUnusedFunctionParameters": "off",
            "noUnusedPrivateClassMembers": "off",
            "noUnusedImports": "off",
            "useUniqueElementIds": "off",
            "noUnusedVariables": "off"
          },
          "performance": {
            "noDynamicNamespaceImportAccess": "off"
          },
          "suspicious": {
            "noDuplicateProperties": "off",
            "noTemplateCurlyInString": "off",
            "noUnknownAtRules": "off"
          },
          "style": {
            "useImportType": "off",
            "noRestrictedImports": "off"
          }
        }
      },
      "css": {
        "parser": {
          "cssModules": true,
          "allowWrongLineComments": false,
          "tailwindDirectives": true
        }
      }
    }
  ]
}
