{
  "name": "@knip/docs",
  "version": "0.0.0",
  "type": "module",
  "description": "Documentation for Knip, hosted at knip.dev",
  "private": true,
  "homepage": "https://knip.dev",
  "repository": {
    "type": "git",
    "url": "github:webpro-nl/knip",
    "directory": "packages/docs"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "prebuild": "tsx ./scripts/generate-plugin-docs.ts",
    "build": "astro check && astro build",
    "postbuild": "[ \"$CF_PAGES\" = \"1\" ] && find dist -mindepth 2 -type f -name 'index.html' -exec bash -c 'f=\"$1\"; d=$(dirname \"$f\"); bn=$(basename \"$d\"); mv -v \"$f\" \"$d/../$bn.html\"' _ {} \\; && find dist -mindepth 1 -type d -empty -print -delete || true",
    "dev": "astro dev",
    "remark": "remark README.md 'src/content/docs/**/*.md' --verbose -o && mdxlint 'src/content/docs/**/*.mdx' --verbose -o"
  },
  "dependencies": {
    "@astro-community/astro-embed-youtube": "0.5.9",
    "@astrojs/starlight": "0.37.0",
    "sharp": "0.34.5"
  },
  "devDependencies": {
    "@astrojs/check": "0.9.6",
    "@octokit/graphql": "^9.0.3",
    "@types/mdast": "4.0.4",
    "@types/unist": "3.0.3",
    "astro": "5.16.3",
    "hastscript": "9.0.1",
    "mdxlint": "1.0.0",
    "picocolors": "^1.1.1",
    "remark-cli": "12.0.1",
    "remark-directive": "4.0.0",
    "remark-frontmatter": "5.0.0",
    "remark-gfm": "4.0.1",
    "remark-parse": "11.0.0",
    "remark-stringify": "11.0.0",
    "tsx": "^4.21.0",
    "unified": "11.0.5",
    "unist-builder": "4.0.0",
    "unist-util-visit": "5.0.0"
  }
}
