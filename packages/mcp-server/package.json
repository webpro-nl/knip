{
  "name": "@knip/mcp",
  "version": "0.0.7",
  "description": "Knip MCP Server",
  "type": "module",
  "bin": {
    "knip-mcp": "./src/cli.js"
  },
  "exports": {
    ".": "./src/server.js",
    "./tools": "./src/tools.js"
  },
  "files": [
    "src",
    "docs"
