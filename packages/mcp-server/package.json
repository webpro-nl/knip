  },
  "author": "Lars Kappert <lars@webpro.nl>",
  "license": "ISC",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.24.3",
    "knip": "workspace:^",
    "zod": "^4.1.11"
  },
  "engines": {
    "node": ">=18.18.0"
  }
}
