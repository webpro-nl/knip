{
  "$schema": "https://json.schemastore.org/prettierrc",
  "printWidth": 120,
  "singleQuote": true,
  "arrowParens": "avoid",
  "proseWrap": "always",
  "trailingComma": "es5",
  "bracketSameLine": true,
  "overrides": [
    {
      "files": ["*.md", "*.mdx"],
      "options": {
        "printWidth": 80
      }
    }
  ]
}
