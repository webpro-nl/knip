{
  "name": "@knip/root",
  "version": "0.0.0",
  "private": true,
  "description": "Find unused files, dependencies and exports in your TypeScript and JavaScript projects",
  "homepage": "https://knip.dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/webpro/knip"
  },
  "bugs": "https://github.com/webpro/knip/issues",
  "license": "ISC",
  "type": "module",
  "author": {
    "name": "Lars Kappert",
    "email": "lars@webpro.nl"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "knip": "knip",
    "watch": "npm run watch --workspace packages/knip",
    "docs": "npm run dev --workspace packages/docs",
    "format": "npm run format --workspaces --if-present",
    "test": "npm run qa --workspaces --if-present && installed-check --no-include-workspace-root --ignore-dev"
  },
  "peerDependencies": {
    "knip": "file:packages/knip"
  },
  "devDependencies": {
    "installed-check": "^9.1.0"
  }
}
